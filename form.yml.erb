<%-
  groups = OodSupport::User.new.groups.sort_by(&:id).tap { |groups|
    groups.unshift(groups.delete(OodSupport::Process.group))
  }.map(&:name).grep(/^P./)
-%>
---
cluster: "owens"
form:
  - cluster
  - account
  - bc_num_hours
  - bc_vnc_resolution
attributes:
  bc_vnc_resolution:
    required: true
  account:
    label: "Project"
    widget: select
    options:
      <%- groups.each do |group| %>
       - "<%= group %>"
      <%- end %>
